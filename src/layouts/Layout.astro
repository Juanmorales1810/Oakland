---
import Footer from "@/components/interfaces/Footer.astro";
import Header from "@/components/interfaces/Header.astro";
import SEO from "@/components/interfaces/SEO.astro";
import { ClientRouter } from "astro:transitions";
interface Preload {
    as: string;
    href: string;
    type: string;
    rel?: "preload" | "prefetch";
    crossorigin?: string;
}

interface Props {
    title: string;
    description: string;
    preload?: Array<Preload>;
    canonical?: string;
    image?: string;
}

const { title, description, preload, canonical, image } = Astro.props;

import "@/styles/global.css";
---

<!doctype html>
<html lang="es">
    <head>
        <SEO
            canonical={canonical}
            description={description}
            image={image}
            preload={preload}
            title={title}
        />
        <ClientRouter />
    </head>
    <body>
        <Header />
        <main class="antialiased bg-[#a1c2b1]">
            <slot />
        </main>
        <Footer />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
