---
import { Phone } from "lucide-react";
import { SheetMenu } from "../sheet-menu";
import { Button } from "../ui/button";

const routes = [
    { name: "Home", href: "/#hero" },
    { name: "Quienes somos", href: "/#Descriptions" },
    { name: "Servicios", href: "/#Service" },
    { name: "Misión y visión", href: "/#WhyUs" },
    { name: "Contáctenos", href: "/#Reserva" },
];
---

<header class="fixed w-full bg-[#2c2c34] z-50">
    <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
            <div class="md:flex md:items-center md:gap-12">
                <a class="block text-zinc-600" href="/">
                    <span class="sr-only">Home</span>
                    <img
                        src="/logo.png"
                        alt="Logo de Oakland Services"
                        class="h-12"
                    />
                </a>
            </div>

            <div class="hidden md:block">
                <nav aria-label="Global">
                    <ul class="flex items-center gap-6 text-sm">
                        {
                            routes.map((route) => (
                                <li>
                                    <a href={route.href}>
                                        <span>{route.name}</span>
                                        <span>{route.name}</span>
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </nav>
            </div>

            <div class="flex items-center gap-4">
                <div class="sm:flex sm:gap-4">
                    <a
                        class="inline-flex items-center justify-center gap-2 rounded-md px-5 py-2.5 text-sm font-medium text-white border [&_svg]:pointer-events-none [&_svg:not([class*='size-'])]:size-4 shrink-0 [&_svg]:shrink-0 outline-none hover:bg-black hover:border-black hover:text-[#f0ba56] transition duration-500"
                        target="_blank"
                        href="https://api.whatsapp.com/send?phone=56997364529&text=Hola%20quiero%20hacer%20una%20reserva.%20Que%20dias%20tenes%20disponibles%3F"
                    >
                        Consulte ahora
                        <Phone className="ml-2 h-4 w-4" />
                    </a>
                </div>

                <div class="block md:hidden">
                    <SheetMenu client:visible />
                </div>
            </div>
        </div>
    </div>
</header>
<style>
    li {
        position: relative;
        overflow: hidden;
        color: white;
        border-radius: 12px;
        display: inline-block;
        font-size: 15px;
        line-height: 15px;
        padding: 18px 18px 17px;
        text-decoration: none;
        cursor: pointer;
        background: transparent;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
    }

    li span:first-child {
        position: relative;
        transition: color 600ms cubic-bezier(0.48, 0, 0.12, 1);
        z-index: 10;
    }

    li span:last-child {
        color: #f0ba56;
        display: block;
        position: absolute;
        text-wrap: nowrap;
        bottom: 0;
        transition: all 500ms cubic-bezier(0.48, 0, 0.12, 1);
        z-index: 100;
        opacity: 0;
        top: 50%;
        left: 50%;
        transform: translateY(225%) translateX(-50%);
        height: 14px;
        line-height: 13px;
    }

    li:after {
        content: "";
        position: absolute;
        bottom: -50%;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: black;
        transform-origin: bottom center;
        transition: transform 600ms cubic-bezier(0.48, 0, 0.12, 1);
        transform: skewY(9.3deg) scaleY(0);
        z-index: 50;
    }

    li:hover:after {
        transform-origin: bottom center;
        transform: skewY(9.3deg) scaleY(2);
    }

    li:hover span:last-child {
        transform: translateX(-50%) translateY(-50%);
        opacity: 1;
        transition: all 900ms cubic-bezier(0.48, 0, 0.12, 1);
    }
</style>
